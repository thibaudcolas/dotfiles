# Easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd .."

# alias g="git"
alias h="history"

# autojump
alias z="j"

# Git aliases.
alias ga='git add'
alias gl='git log'
alias ghi='git hist'
alias gha='git hist --all'
alias gs='git status'
alias gd='git diff'
alias gdw='git diff -w'
alias gci='git commit -m'
alias gcia='git commit -am'
alias gc='git checkout'

